# Database Configuration
# Format must be: postgresql://username:password@hostname:port/database_name
DATABASE_URL="postgresql://postgres:your_password@localhost:5432/apexsalesai"

# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY="your_azure_openai_key"
AZURE_OPENAI_ENDPOINT="https://your-resource-name.openai.azure.com/"
AZURE_OPENAI_DEPLOYMENT_NAME="max-gpt-4o"

# HubSpot API Configuration
HUBSPOT_CLIENT_ID="your_hubspot_client_id"
HUBSPOT_CLIENT_SECRET="your_hubspot_client_secret"
HUBSPOT_REDIRECT_URI="http://localhost:3000/api/hubspot/callback"

# Security
NEXTAUTH_SECRET="your_nextauth_secret_key"
NEXTAUTH_URL="http://localhost:3000"

# Feature Flags
ENABLE_AGENT_AUTONOMY=true
ENABLE_MOCK_DATA_FALLBACK=true
